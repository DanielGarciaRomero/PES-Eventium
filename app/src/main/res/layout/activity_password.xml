<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"><![CDATA[>

    ]]>

    <TextView
        android:text="Introduce tu dirección de correo electrónico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp"
        android:id="@+id/textView10"
        android:gravity="center"
        android:textSize="18sp" />


    <TextView
        android:text="Recibirás un mail con una nueva contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="138dp"
        android:id="@+id/textView11"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_below="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/editText7"
        android:colorControlActivated="@color/colorToolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000" />

    <Button
        android:text="Obtener contraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:id="@+id/button13"
        android:background="#5FBD88"
        android:layout_marginRight="20dp"
        />

    <ImageView android:src="@drawable/eventium"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp" />

</RelativeLayout>