<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="20dp">

        <TextView
            android:id="@+id/promocion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona un plan de promoción:"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <RadioGroup
            android:id="@+id/seleccionar_promocion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/promocion">

            <RadioButton
                android:id="@+id/promocionar_platino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Platino: 15 €. Tu evento se mostrará durante un mes de una forma más destacada a los usuarios de Eventium."
                android:textSize="16dp"
                android:layout_marginTop="45dp"
                android:layout_below="@+id/promocion" />

            <RadioButton
                android:id="@+id/promocionar_oro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oro: 5 €. Tu evento se mostrará durante una semana de una forma más destacada a los usuarios de Eventium."
                android:textSize="16dp"
                android:layout_marginTop="45dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/promocionar_platino" />

            <RadioButton
                android:id="@+id/promocionar_plata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plata: 1 €. Tu evento se mostrará durante 24 horas de una forma más destacada a los usuarios de Eventium."
                android:textSize="16dp"
                android:layout_marginTop="45dp"
                android:layout_below="@+id/promocionar_oro" />
        </RadioGroup>

        <TextView
            android:id="@+id/promocionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROMOCIONAR"
            android:textColor="#007D71"
            android:textSize="16dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/seleccionar_promocion" />

        <TextView
            android:id="@+id/cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCELAR"
            android:textColor="#007D71"
            android:textSize="16dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="160dp"
            android:layout_below="@+id/seleccionar_promocion" />

    </RelativeLayout>

</ScrollView>
