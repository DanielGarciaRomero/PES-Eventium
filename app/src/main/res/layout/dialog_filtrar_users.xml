<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="24dp">

        <TextView
            android:id="@+id/filtrar_tv_reputa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reputación como organizador"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/filtrar_tv_min_reputa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mínima"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_marginTop="40dp"
            android:layout_alignStart="@+id/filtrar_tv_reputa"
            android:layout_below="@+id/filtrar_tv_reputa" />

        <RatingBar
            android:id="@+id/minRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:stepSize="1"
            android:layout_below="@+id/filtrar_tv_min_reputa"
            android:layout_alignStart="@+id/filtrar_tv_min_reputa" />

        <TextView
            android:id="@+id/filtrar_tv_max_reputa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Máxima"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_marginTop="30dp"
            android:layout_alignStart="@+id/filtrar_tv_min_reputa"
            android:layout_below="@+id/minRatingBar" />

        <RatingBar
            android:id="@+id/maxRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:stepSize="1"
            android:layout_below="@+id/filtrar_tv_max_reputa"
            android:layout_alignStart="@+id/filtrar_tv_max_reputa" />

        <TextView
            android:id="@+id/filtrar_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciudad"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginTop="45dp"
            android:layout_alignStart="@+id/filtrar_tv_min_reputa"
            android:layout_below="@+id/maxRatingBar" />

        <EditText
            android:id="@+id/filtrar_et_city"
            android:focusable="false"
            android:inputType="textNoSuggestions"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:colorControlActivated="@android:color/black"
            android:layout_below="@+id/filtrar_tv_city"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/filtrar_tv_filtrar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FILTRAR"
            android:textColor="#007D71"
            android:textSize="18dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/filtrar_et_city" />

        <TextView
            android:id="@+id/filtrar_tv_cancelar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCELAR"
            android:textColor="#007D71"
            android:textSize="18dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="25dp"
            android:layout_alignEnd="@+id/filtrar_et_city"
            android:layout_below="@+id/filtrar_et_city" />


    </RelativeLayout>

</ScrollView>
