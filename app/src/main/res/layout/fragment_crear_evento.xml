<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/colorFondo">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título del evento"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editText13"
            android:inputType="textNoSuggestions"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:colorControlActivated="@color/colorToolbar"
            android:layout_below="@+id/textView24"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoría"
            android:textColor="#000000"
            android:layout_marginTop="80dp"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView25"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_spinner"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:spinnerMode="dropdown"
                android:popupBackground="@color/colorSpinner"
                android:dropDownVerticalOffset="22dp"
                android:prompt="@string/textoCategorias"
                android:entries="@array/Categorias"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/arrowSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="220dp"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:src="@drawable/arrow_dropdown" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto principal"
            android:textColor="#000000"
            android:layout_marginTop="168dp"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/imageButton"
            android:src="@raw/unavailable"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/textView26"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciudad"
            android:textColor="#000000"
            android:layout_marginTop="360dp"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editText14"
            android:inputType="textNoSuggestions"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:colorControlActivated="@color/colorToolbar"
            android:layout_marginTop="348dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="65dp"
            android:layout_alignParentEnd="true"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewDir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:textColor="#000000"
            android:layout_marginTop="410dp"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editTextDir"
            android:inputType="textNoSuggestions"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:colorControlActivated="@color/colorToolbar"
            android:layout_marginTop="398dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="85dp"
            android:layout_alignParentEnd="true"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha inicial  -  Fecha final"
            android:textColor="#000000"
            android:layout_marginTop="460dp"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editText15"
            android:inputType="textNoSuggestions"
            android:maxLength="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:colorControlActivated="@color/colorToolbar"
            android:layout_below="@+id/textView30"
            android:layout_alignParentStart="true"
            android:layout_marginRight="220dp"
            android:layout_alignParentEnd="true"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#000000"
            android:layout_marginTop="492dp"
            android:textSize="18dp"
            android:layout_marginLeft="110dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editText16"
            android:inputType="textNoSuggestions"
            android:maxLength="10"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:colorControlActivated="@color/colorToolbar"
            android:layout_below="@+id/textView30"
            android:layout_alignParentStart="true"
            android:layout_marginRight="102dp"
            android:layout_marginLeft="115dp"
            android:layout_alignParentEnd="true"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DD/MM/AAAA"
            android:layout_marginTop="496dp"
            android:textSize="15dp"
            android:layout_marginLeft="230dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora inicial    -   Hora final"
            android:textColor="#000000"
            android:layout_marginTop="540dp"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editText17"
            android:inputType="textNoSuggestions"
            android:maxLength="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:colorControlActivated="@color/colorToolbar"
            android:layout_below="@+id/textView33"
            android:layout_alignParentStart="true"
            android:layout_marginRight="220dp"
            android:layout_alignParentEnd="true"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#000000"
            android:layout_marginTop="572dp"
            android:textSize="18dp"
            android:layout_marginLeft="109dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editText18"
            android:inputType="textNoSuggestions"
            android:maxLength="5"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:colorControlActivated="@color/colorToolbar"
            android:layout_below="@+id/textView33"
            android:layout_alignParentStart="true"
            android:layout_marginRight="102dp"
            android:layout_marginLeft="115dp"
            android:layout_alignParentEnd="true"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HH:MM"
            android:layout_marginTop="576dp"
            android:textSize="15dp"
            android:layout_marginLeft="230dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textColor="#000000"
            android:layout_marginTop="622dp"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editText19"
            android:maxLength="4"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:colorControlActivated="@color/colorToolbar"
            android:layout_below="@+id/textView36"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="260dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EUR"
            android:layout_marginTop="652dp"
            android:textSize="18dp"
            android:layout_marginLeft="75dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textViewEntradas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entradas disponibles en"
            android:textColor="#000000"
            android:layout_marginTop="705dp"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editTextEntradas"
            android:inputType="textNoSuggestions"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:colorControlActivated="@color/colorToolbar"
            android:layout_below="@+id/textViewEntradas"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textColor="#000000"
            android:layout_marginTop="800dp"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editTextDescripcion"
            android:layout_below="@+id/textViewDescripcion"
            android:layout_marginTop="15dp"
            android:inputType="textMultiLine|textNoSuggestions"
            android:lines="6"
            android:gravity="top|left"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="@drawable/selector_desc_evento"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/button17"
            android:text="Crear evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1000dp"
            android:background="#5FBD88" />

    </RelativeLayout>

</ScrollView>